@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Unauthorized</title>

    <style>
        .card {
            /* Add shadows to create the "card" effect */
            box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
            transition: 0.3s;
            max-width: 440px;
            min-width: 320px;
            position: relative;
            margin-top: 100px;
            margin-left: auto;
            margin-right: auto;
            padding: 44px;
            font-family: Calibri;
        }

            /* On mouse-over, add a deeper shadow */
            .card:hover {
                box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
            }

        /* Add some padding inside the card container */
        .container {
            padding: 2px 16px;
        }
    </style>

</head>
<body>
    <div class="card">
        <img src="~/Content/Logogym.png" alt="logo" height="50" width="150" />
        <div class="container">

            <h3><b>Sorry! You are Unauthorized to Access this Application</b></h3>
            <h5>Please Contact Support Team</h5>
        </div>
    </div>
</body>
</html>
